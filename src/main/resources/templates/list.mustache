{{>layouts/header}}
<br>
<div>
    <form action="/boards/{{category}}" method="get" class="row">
        <div class="offset-1 col-3">
            <h3>{{category}}</h3>
            <h5>검색개수 : {{searchCount}}</h5>
        </div>
        <div class="offset-3 col-4 text-end">
            <div class="mb-3">
                <select name="searchOption" style="width: 80px; height: 30px; text-align: center">
                    <option value="title">제목</option>
                    <option value="userName">작성자</option>
                </select>
                {{#keyword}}
                    <input type="text" name="keyword" style="width: 250px" value="{{keyword}}">
                {{/keyword}}
                {{^keyword}}
                    <input type="text" name="keyword" style="width: 250px" placeholder="검색어를 입력해주세요">
                {{/keyword}}
                <button type="submit" class="btn btn-primary" style="background-color: lightskyblue; border: 1px solid lightskyblue; color: #000;">검색</button>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="offset-1 col-10" >
        <table class="table text-center" >
            <thead class="table-warning" >
            <tr>
                <th class="col-md-1" style="background-color: #B7CFF7">Id</th>
                <th class="col-md-4" style="background-color: #B7CFF7">제목</th>
                <th class="col-md-3" style="background-color: #B7CFF7">작성자</th>
                <th class="col-md-1" style="background-color: #B7CFF7">댓글수</th>
                <th class="col-md-1" style="background-color: #B7CFF7">좋아요</th>
                <th class="col-md-2" style="background-color: #B7CFF7">작성일자</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
            {{#boards}}
                <tr>
                    <th>{{id}}</th>
                    <td><a href="/boards/view/{{id}}">{{title}}</a></td>
                    <td>{{userName}}</td>
                    <td>{{commentCount}}</td>
                    <td>{{goodCount}}</td>
                    <td>{{createdAt}}</td>
                </tr>
            {{/boards}}
            </tbody>
        </table>
    </div>
    <div>
        <ul class="pagination justify-content-center">
            <!-- keyword가 존재하면 => 검색 o -->
            {{#keyword}}
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {{/keyword}}
            <!-- keyword가 존재하지 않으면 => 검색 x -->
            {{^keyword}}
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {{/keyword}}
        </ul>

        <div style="float: right">
            <a class="btn btn-primary"  href="/boards/{{category}}/write"
               style="margin-right: 130px; background-color: lightskyblue; border: 1px solid lightskyblue; color: black">글 작성</a>
        </div>

    </div>
</div>
{{>layouts/footer}}