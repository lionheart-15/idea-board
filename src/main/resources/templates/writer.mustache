{{>layouts/header}}
<br>
<link rel="stylesheet" href="css/writer.css">

<div class="container text-center">
<form method="post" action="">
    <table class="table table-striped" style="text-align: center; border: solid 1px #dddddd; word-break : break-all ; height : auto; width: 700px">
        <thead>
        <tr>
            <th style="text-align: center;">게시판 글쓰기 양식</th>
        </tr>
        </thead>
        <tbody>
        <tr>
        <td>
            <div class="input-group mb-1">
            <input type="text" class="form-control" placeholder="글 제목" name="bbsTitle">
            </div>
        </td>
        </tr>
        <tr>
            <td>
                <textarea class="form-control" style="height: 350px"  placeholder="글 내용" name="bbsContent" ></textarea>
            </td>
        </tr>
        <tr>
            <td>
            <div class="mb-1">
                <input class="form-control" type="file" id="formFile">
            </div>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="writer_btn">
        <button type="submit">등록</button>
        <button type="reset">초기화</button>
        <a href="/list">목록</a>
    </div>

</form>
</div>

<br>
